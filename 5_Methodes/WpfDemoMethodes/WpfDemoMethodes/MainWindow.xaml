<Window x:Class="WpfDemoMethodes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoMethodes"
        mc:Ignorable="d"
        Title="Price Calculator" Height="450" Width="800">
    <StackPanel>
        <Button Name="childTicketButton" 
                Click="childTicketButton_Click">Child Ticket</Button>
        <Button Name="teenTicketButton" 
                Click="teenTicketButton_Click">Teen Ticket</Button>
        <Button Name="adultTicketButton" 
                Click="adultTicketButton_Click">Adult Ticket</Button>

        <CheckBox Name="isVipCheckBox" Margin="20">Is VIP</CheckBox>
    </StackPanel>
</Window>
